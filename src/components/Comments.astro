---
import Giscus from "@giscus/react";

const { slug, locale } = Astro.props;
---

<commants class="comments">
  <Giscus
    client:load
    id="comments"
    repo="eindex/blog"
    repoId="R_kgDOGWb6Yg"
    category="General"
    categoryId="DIC_kwDOGWb6Ys4CAKn-"
    mapping="specific"
    term={slug}
    reactionsEnabled="1"
    emitMetadata="1"
    inputPosition="top"
    theme="preferred_color_scheme"
    lang={locale == "cn" ? "zh-CN" : locale}
    loading="lazy"
  />
</commants>
