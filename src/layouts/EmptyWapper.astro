---
import Footer from "@components/Footer.astro";
import GA4 from "@components/analytics/ga4.astro";
import Umami from "@components/analytics/umami.astro";
import Cloudflare from "@components/analytics/Cloudflare.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="webmention" href="https://webmention.io/eindex.me/webmention" />
    <link rel="pingback" href="https://webmention.io/eindex.me/xmlrpc" />
    <link
      rel="preload"
      href="https://cdn.jsdelivr.net/npm/lxgw-wenkai-webfont@1.1.0/lxgwwenkai-regular.css"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <link rel="stylesheet" href="/katex.min.css" crossorigin="anonymous" />
    <GA4 />
  </head>
  <body>
    <slot />
    <Footer />
    <Umami />
    <Cloudflare />
    <style is:global lang="scss">
      :root {
        --bg-color: #f4f4f4;
        --text-color: #323232;
        --pre-background-color: #272822;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --bg-color: #323232;
          --text-color: #dfdfdf;
          --pre-background-color: #272822;
        }
      }

      body {
        background-color: var(--bg-color);
        color: var(--text-color);
      }

      body::-webkit-scrollbar {
        @apply w-1 bg-none;
      }

      body::-webkit-scrollbar-thumb {
        @apply w-1 bg-gray-400 rounded-sm shadow;
      }

      html {
        font-family: "LXGW WenKai", system-ui, sans-serif;
      }

      body {
        @apply flex flex-col min-h-screen items-center;
        background-color: var(--bg-color);
        color: var(--text-color);
      }
    </style>
  </body>
</html>
