---
import Navbar from "@components/Navbar.astro";
import EmptyWapper from "./EmptyWapper.astro";

export interface Props {
  title: string;
}
const links = [
  {
    name: "Home",
    url: "/",
  },
  {
    name: "中文博客",
    url: "/cn/posts",
  },
  {
    name: "Posts",
    url: "/posts",
  },
  {
    name: "Gallery",
    url: "/gallery",
  },
];
const { title } = Astro.props;
---

<EmptyWapper title={title}>
  <Navbar links={links} />
  <div class="blog">
    <slot />
  </div>
</EmptyWapper>

<style lang="scss">
  .blog {
    @media screen and (min-width: 720px) {
      display: flex;
      flex-direction: column;
      align-items: center;
      width: 720px;
    }

    code {
      font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
        DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
    }
    a {
      color: var(--text-color);
    }
  }
</style>
