---
import Navbar from "@components/layouts/Navbar.astro";
import Sidebar from "@components/layouts/Sidebar.astro";
import EmptyWapper from "./EmptyWapper.astro";

export interface Props {
  title: string;
  seo?: any;
}
const { title, seo = {} } = Astro.props;
---

<EmptyWapper title={title} seo={seo}>
  <Navbar />
  <div class="wapper">
    <main>
      <slot />
    </main>
    <sidebar>
      <Sidebar>
        <slot name="sidebar" />
      </Sidebar>
    </sidebar>
  </div>
</EmptyWapper>

<style lang="scss">
  main {
    @apply flex flex-col h-full gap-4 max-w-3xl w-full;

    code {
      font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
        DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
    }
    a {
      color: var(--text-color);
    }
  }

  sidebar {
    @apply sm:hidden max-w-xs w-1/4;
  }
  .wapper {
    @apply flex flex-row gap-4 justify-center w-full mt-8 px-4 sm:px-2 min-h-full;
  }
</style>
