---
import Navbar from "@components/layouts/Navbar.astro";
import EmptyWapper from "./EmptyWapper.astro";
import Footer from "@components/layouts/Footer.astro";

export interface Props {
  title: string;
  seo?: any;
}

const { title, seo = {} } = Astro.props;
---

<EmptyWapper title={title} seo={seo}>
  <div class="wapper">
    <Navbar />
    <main>
      <slot />
    </main>
    <div class="grow"></div>
    <Footer class="footer" />
  </div>
</EmptyWapper>

<style lang="scss">
  main {
    @apply flex flex-col h-full max-w-3xl w-full;

    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }
    a {
      color: var(--text-color);
    }
  }

  // sidebar {
  //   @apply sm:hidden md:hidden max-w-xs w-1/4 h-fit;
  // }
  .wapper {
    @apply flex flex-col gap-4 justify-items-center items-center self-center w-full px-4 sm:px-2 min-h-full;
    max-width: 1280px;
  }
</style>
